<div class="mb-6" id="comment-form">
  <%= render 'shared/error_messages', object: comment %>
  <div class="max-w-4xl mx-auto px-4">
    <%= form_with model: comment, url: post_comments_path(post), local: false do |f| %>
      <div class="mb-4">
        <%= f.label :body, "コメント作成", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.text_area :body, class: "w-full p-3 border border-gray-300 rounded-md bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500", rows: 4, placeholder: Comment.human_attribute_name(:body) %>
      </div>
      <%= f.submit "投稿", class: "btn btn-primary bg-blue-500 text-white py-2 px-6 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <% end %>
  </div>
</div>
