<tr id="comment-<%= comment.id %>" class="border-b">

  <div class="flex items-start space-x-4">
      <td class="w-16">
        <%= image_tag @user.profile.url, width: "50", height: "50", class: "rounded-full" %>
      </td>
    <div class="flex-1">
      <div class="bg-gray-100 rounded p-3">
        <p class="text-sm text-gray-800"><%= simple_format(comment.body) %></p>
      </div>
      <p class="text-xs text-gray-500 mt-1"><%= comment.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
    </div>
  </div>
</tr>
