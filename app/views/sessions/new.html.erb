<div class="flex items-center justify-center min-h-screen bg-gray-50">
  <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-lg">
    <h1 class="mb-6 text-2xl font-semibold text-center text-gray-800">ログイン</h1>

    <%= form_with url: login_path, local: true, id: "login-form", class: "space-y-6" do |f| %>
      <!-- 名前入力 -->
      <div id="step-name">
        <%= f.label :name, "名前", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, id: "name-field", class: "block w-full px-4 py-2 mt-1 text-gray-900 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        <button type="button" id="next-to-email" class="mt-4 w-full px-4 py-2 text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:text-sm">
          次へ
        </button>
      </div>

      <!-- メールアドレスとパスワード入力 -->
      <div id="step-email-password" class="hidden">
        <!-- メールアドレス入力 -->
        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, id: "email-field", class: "block w-full px-4 py-2 mt-1 text-gray-900 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <!-- パスワード入力 -->
        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, id: "password-field", class: "block w-full px-4 py-2 mt-1 text-gray-900 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <!-- ログインボタン -->
        <div>
          <%= f.submit "ログイン", class: "w-full px-6 py-3 text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:text-sm" %>
        </div>
      </div>
    <% end %>

    <!-- 登録ページへのリンク -->
    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600">
        アカウントをお持ちでない場合は
        <%= link_to "登録", signup_path, class: "text-indigo-600 hover:text-indigo-500" %>
      </p>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const nameStep = document.getElementById("step-name");
    const emailPasswordStep = document.getElementById("step-email-password");
    const nextButton = document.getElementById("next-to-email");

    nextButton.addEventListener("click", function() {
      if (document.getElementById("name-field").value.trim() !== "") {
        nameStep.classList.add("hidden");
        emailPasswordStep.classList.remove("hidden");
      } else {
        alert("名前を入力してください");
      }
    });
  });
</script>
