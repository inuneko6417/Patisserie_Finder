<div class="bg-blue-50 py-10">
  <h1 class="text-xl font-bold text-center text-blue-800">パティスリーランキング</h1>
  <p class="text-center text-gray-600 mb-6">注目の店舗をチェック</p>

  <!-- グリッドレイアウト -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 max-w-5xl mx-auto">
    <% @patisseries.each do |patisserie| %>
      <!-- 各店舗カード -->
      <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
        <!-- ランク -->
        <div class="bg-yellow-400 text-white text-xs font-bold py-1 px-3">
          ランク: <%= patisserie[:rank] %>
        </div>
        <!-- 画像 -->
        <div class="h-32 bg-gray-200 flex items-center justify-center">
          <span class="text-gray-500 text-sm">画像がここに表示されます</span>
        </div>
        <!-- 店舗情報 -->
        <div class="p-4">
          <h2 class="text-lg font-semibold text-gray-700">
            <%= link_to patisserie[:name], patisseries_path(patisserie[:id]), class: "text-blue-600 hover:underline" %>
          </h2>
          <p class="text-sm text-gray-600 mt-2"><%= patisserie[:description] %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
