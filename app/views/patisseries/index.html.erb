<div class="bg-blue-50 py-12">
  <h1 class="text-3xl font-bold text-center text-blue-800 mb-4">イチオシ</h1>
  <p class="text-center text-gray-600 mb-12">注目の店舗をチェック</p>

  <!-- グリッドレイアウト -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto px-4">
    <% @patisseries.each do |patisserie| %>
      <!-- 各店舗カード -->
      <div class="bg-white border border-gray-200 rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden transform hover:scale-105">
        <!-- 画像 -->
        <div class="h-64 bg-gray-100 relative">
          <% if patisserie[:image].present? %>
            <%= image_tag "patisseries/#{patisserie[:image]}", alt: patisserie[:name], class: "object-cover w-full h-full" %>
          <% end %>
        </div>
        <!-- 店舗情報 -->
        <div class="p-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-2">
            <%= link_to patisserie[:name], patisseries_path(patisserie[:id]), class: "text-blue-600 hover:underline" %>
          </h2>
          <% if patisserie[:description].present? %>
            <p class="text-sm text-gray-600 mt-2"><%= patisserie[:description] %></p>
          <% else %>
            <p class="text-sm text-gray-400 mt-2">店舗の詳細情報はありません</p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
