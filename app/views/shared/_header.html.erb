<header>
  <nav class="bg-gray-100 border-b border-gray-300">
    <div class="container mx-auto flex items-center justify-between py-3">
      <!-- ロゴ -->
      <%= link_to '/', class: "flex items-center" do %>
        <%= image_tag 'logo.png', alt: "Logo", class: "h-8" %>
      <% end %>

      <!-- ハンバーガーメニュー -->
      <button
        class="lg:hidden text-gray-500 hover:text-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-300"
        id="navbar-toggler"
      >
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- ナビゲーションメニュー -->
      <div class="hidden lg:flex lg:items-center lg:space-x-6" id="navbar-menu">
        <ul class="flex flex-col lg:flex-row lg:space-x-6 space-y-3 lg:space-y-0">
          <!-- 掲示板メニュー -->
          <li class="relative group">
            <%= link_to '掲示板', '#', class: "text-gray-700 hover:text-gray-900 font-medium inline-block" %>
            <ul class="absolute left-0 hidden group-hover:block bg-white border border-gray-200 rounded shadow-md mt-1">
              <li>
                <%= link_to '掲示板一覧', '#', class: "block px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-gray-900" %>
              </li>
              <li>
                <%= link_to '掲示板作成', '#', class: "block px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-gray-900" %>
              </li>
            </ul>
          </li>

          <!-- ブックマーク一覧 -->
          <li>
            <%= link_to 'ブックマーク一覧', '#', class: "text-gray-700 hover:text-gray-900 font-medium" %>
          </li>

          <!-- プロフィールメニュー -->
          <li class="relative group">
            <%= link_to '#', class: "flex items-center text-gray-700 hover:text-gray-900" do %>
              <%= image_tag 'sample.jpg', class: "rounded-full w-10 h-10 mr-2", alt: "Profile" %>
            <% end %>
            <ul class="absolute right-0 hidden group-hover:block bg-white border border-gray-200 rounded shadow-md mt-1">
              <li class="px-4 py-2 text-gray-700">inuneko たろう</li>
              <li class="border-t border-gray-200"></li>
              <li>
                <%= link_to 'プロフィール', '#', class: "block px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-gray-900" %>
              </li>
              <li>
                <%= link_to 'ログアウト', '#', class: "block px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-gray-900", data: { turbo_method: :delete } %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- スクリプト: ハンバーガーメニューの開閉 -->
  <script>
    document.getElementById('navbar-toggler').addEventListener('click', function () {
      const menu = document.getElementById('navbar-menu');
      menu.classList.toggle('hidden');
    });
  </script>
</header>
