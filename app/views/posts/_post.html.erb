<div class="col-span-12 lg:col-span-1 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="border border-gray-300 shadow-md hover:shadow-lg transition-shadow rounded-lg bg-white">

      <% if post.images.first.present? %>
        <div class="overflow-hidden rounded-t-lg">
          <%= image_tag post.images.first, alt: post.title, class: "w-full h-60 object-cover" %>
        </div>
      <% end %>

      <div class="p-5">
        <div class="flex items-center">
          <h4 class="text-xl font-semibold text-gray-900">
            <%= link_to post.title, post_path(post), class: "text-blue-600 hover:underline" %>
          </h4>
          <div class="ml-auto flex space-x-3">
            <%= render "crud_menus", post: post if current_user&.own?(post) %>
          </div>
        </div>

        <ul class="text-sm text-gray-500 mt-3 space-y-2">
          <li class="flex items-center space-x-2">
            <i class="fas fa-user text-gray-400"></i>
            <span class="font-medium"><%= post.user.name %></span>
          </li>
          <li class="flex items-center space-x-2">
            <i class="fas fa-calendar-alt text-gray-400"></i>
            <span><%= l post.created_at, format: :short %></span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
