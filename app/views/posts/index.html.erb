<div class="container mx-auto pt-6">
  <!-- 検索フォーム -->
  <div class="flex justify-center mb-6">
    <form class="w-full max-w-lg">
      <div class="flex items-center border border-gray-300 rounded-lg overflow-hidden">
        <input
          class="flex-grow px-4 py-2 focus:outline-none"
          placeholder="検索ワード"
          type="search"
        />
        <button
          type="submit"
          class="bg-blue-500 text-white px-4 py-2 hover:bg-blue-600"
        >
          検索
        </button>
      </div>
    </form>
  </div>

  <!-- 掲示板一覧 -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% if @boards.present? %>
      <% @boards.each do |board| %>
        <div id="board-id-<%= board.id %>">
          <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <%= image_tag "board_placeholder.png", class: "w-full h-48 object-cover" %>
            <div class="p-4">
              <div class="flex justify-between items-center">
                <h4 class="text-lg font-bold text-gray-800">
                  <%= link_to board.title, '#' %>
                </h4>
                <div class="flex space-x-2">
                  <%= link_to '#', id: "button-edit-#{board.id}" do %>
                    <i class="bi bi-pencil-fill text-gray-500 hover:text-gray-700"></i>
                  <% end %>
                  <%= link_to '#', id: "button-delete-#{board.id}", method: :delete, data: { confirm: '' } do %>
                    <i class="bi bi-trash-fill text-red-500 hover:text-red-700"></i>
                  <% end %>
                </div>
              </div>
              <ul class="mt-2 text-sm text-gray-600">
                <li class="flex items-center space-x-2">
                  <i class="bi bi-person"></i>
                  <span><%= board.user.decorate.full_name %></span>
                </li>
                <li class="flex items-center space-x-2">
                  <i class="bi bi-calendar"></i>
                  <span><%= l board.created_at, format: :short %></span>
                </li>
              </ul>
              <p class="mt-4 text-gray-700">本文</p>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center text-gray-500">掲示板がありません</div>
    <% end %>
  </div>
</div>
