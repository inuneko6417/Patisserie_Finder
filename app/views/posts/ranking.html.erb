<h3 class="text-3xl font-bold text-indigo-700 mb-8 text-center">­ЪЈє ТіЋуе┐сЃЕсЃ│сѓГсЃ│сѓ░</h3>

<div class="max-w-4xl mx-auto space-y-6">
  <% @posts.each_with_index do |post, index| %>
    <div class="bg-white shadow-lg hover:shadow-xl transition p-6 rounded-2xl border border-gray-200">
      <div class="flex items-center space-x-6">

        <!-- сЃЕсЃ│сѓГсЃ│сѓ░сЃљсЃЃсѓИ№╝ѕ1сђю3СйЇсЂ»жЄЉсЃ╗жіђсЃ╗жіЁсђЂсЂЮсѓїС╗ЦжЎЇсЂ»жЮњ№╝Ѕ -->
        <% badge_colors = ["bg-yellow-500", "bg-gray-400", "bg-amber-600"] %>
        <div class="w-12 h-12 <%= index < 3 ? badge_colors[index] : 'bg-indigo-600' %> text-white text-2xl font-bold flex items-center justify-center rounded-full">
          <%= index + 1 %>
        </div>

        <!-- ТіЋуе┐ТЃЁта▒ -->
        <div class="flex-1">
          <h2 class="text-xl font-semibold text-gray-900">
            <%= link_to post.title, post_path(post), class: "hover:text-indigo-500 transition" %>
          </h2>
          <p class="text-gray-600 text-sm mt-1">­ЪЉц ТіЋуе┐УђЁ: <%= post.user.name %></p>
          <p class="text-gray-600 text-sm">­Ъњг сѓ│сЃАсЃ│сЃѕТЋ░: <%= post.comments.count %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
