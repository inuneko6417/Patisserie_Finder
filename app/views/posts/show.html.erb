<%= form_with model: @post, local: true, class: "max-w-4xl mx-auto bg-white shadow-md rounded p-6" do |f| %>
  <!-- ヘッダー -->
  <header class="bg-gray-800 text-white text-center py-4">
    <h1 class="text-lg font-semibold">USER_NAME</h1>
  </header>

  <!-- メイン画像 -->
  <div class="mt-6">
    <img id="main-image" src="<%= image_url('post_placeholder.png') %>" alt="メイン画像" class="w-full h-64 bg-gray-300 object-cover rounded" />
  </div>

  <!-- サムネイル画像一覧 -->
  <div class="flex justify-between mt-4 space-x-4">
    <img
      src="<%= image_url('post_placeholder.png') %>"
      alt="サムネイル1"
      class="w-1/3 h-24 bg-gray-300 object-cover rounded cursor-pointer thumbnail"
    />
    <img
      src="<%= image_url('post_placeholder.png') %>"
      alt="サムネイル2"
      class="w-1/3 h-24 bg-gray-300 object-cover rounded cursor-pointer thumbnail"
    />
    <img
      src="<%= image_url('post_placeholder.png') %>"
      alt="サムネイル3"
      class="w-1/3 h-24 bg-gray-300 object-cover rounded cursor-pointer thumbnail"
    />
  </div>

  <script>
    <!-- サムネイル画像をクリックしたときにメイン画像を更新するスクリプト -->
    document.querySelectorAll('.thumbnail').forEach((thumbnail) => {
      thumbnail.addEventListener('click', function () {
        const mainImage = document.getElementById('main-image');
        mainImage.src = this.src; // サムネイルの画像URLをメイン画像に設定
      });
    });
  </script>

  <!-- 本文 -->
  <div>
    <label class="block text-gray-700 font-semibold">本文</label>
    <div class="mt-1 block w-full p-2 border border-gray-300 rounded-md bg-gray-50">
      <%= @post.body %>
    </div>
  </div>



  <!-- コメント -->
  <section class="mt-6">
    <h2 class="text-lg font-semibold mb-4">コメント</h2>
    <div class="space-y-4">
      <!-- コメント1 -->
      <div class="flex items-start space-x-4">
        <div class="w-10 h-10 bg-gray-400 rounded-full"></div>
        <div class="flex-1">
          <div class="bg-gray-100 rounded p-3">
            <p class="text-sm text-gray-800">ここのケーキ美味しいですよね！！</p>
          </div>
          <p class="text-xs text-gray-500 mt-1">1月19日 15:30</p>
        </div>
      </div>
      <!-- コメント2 -->
      <div class="flex items-start space-x-4">
        <div class="w-10 h-10 bg-gray-400 rounded-full"></div>
        <div class="flex-1">
          <div class="bg-gray-100 rounded p-3">
            <p class="text-sm text-gray-800">楽しみにしています！</p>
          </div>
          <p class="text-xs text-gray-500 mt-1">1月19日 15:35</p>
        </div>
      </div>
    </div>
  </section>
<% end %>
