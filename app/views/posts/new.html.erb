<div class="max-w-2xl mx-auto mt-10 p-6 bg-white shadow-md rounded-md">
  <h1 class="text-2xl font-bold mb-6 text-center">新規投稿</h1>

  <%= form_with(model: @post, local: true, class: "space-y-4") do |f| %>
    <!-- タイトル -->
    <div>
      <%= f.label :title, "タイトル", class: "block text-gray-700 font-semibold" %>
      <%= f.text_field :title, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-yellow-500" %>
    </div>

    <!-- 本文 -->
    <div>
      <%= f.label :body, "本文", class: "block text-gray-700 font-semibold" %>
      <%= f.text_area :body, rows: 6, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-yellow-500" %>
    </div>

    <!-- 画像URL -->
    <div>
      <%= f.label :image_url, "画像URL", class: "block text-gray-700 font-semibold" %>
      <%= f.text_field :image_url, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-yellow-500" %>
    </div>

    <!-- ユーザーID (非表示) -->
    <%= f.hidden_field :user_id, value: current_user.id %>

    <!-- 送信ボタン -->
    <div>
      <%= f.submit "投稿する", class: "w-full bg-yellow-500 hover:bg-yellow-600 text-white py-2 px-4 rounded-md font-semibold transition duration-300" %>
    </div>
  <% end %>
</div>
